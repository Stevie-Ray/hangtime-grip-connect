{
  "tasks": {},
  "workspace": {
    "members": ["packages/*", "examples/*"]
  },
  "lint": {
    "include": ["packages/", "examples/"],
    "rules": {
      "tags": ["recommended"],
      "exclude": ["no-sloppy-imports"]
    }
  },
  "fmt": {
    "lineWidth": 120,
    "indentWidth": 2,
    "semiColons": false,
    "singleQuote": false,
    "exclude": ["**/android/**", "**/ios/**"]
  },
  "compilerOptions": {
    "lib": ["deno.window", "dom"]
  },
  "unstable": ["sloppy-imports"],
  "nodeModulesDir": "auto"
}
